<!DOCTYPE html>
<html lang="en">
  <%- include('auth-pages/partials/header') %>
  <body>
    <div class="text-center fs-1 mb-3">
      LIST PRODUCT <%= products[0].User.username %>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>NO</th>
          <th>Name Product</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Category</th>
          <th>ACTION</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach((el,index)=>{%>
        <tr>
          <td><%= index+1 %></td>
          <td><%= el.name %></td>
          <td><%= el.price %></td>
          <td><%= el.stock %></td>
          <td><%= el.Category.name %></td>
          <td>
            <a href="/product/8/edit/<%= el.id %>">EDIT</a>
            <a href="/product/8/delete/<%= el.id %>">DELETE</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
